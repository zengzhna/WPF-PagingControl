                                      Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                                      SnapsToDevicePixels="True"></Path>
                            </Button>
                            <StackPanel x:Name="PART_Content" Orientation="Horizontal">
